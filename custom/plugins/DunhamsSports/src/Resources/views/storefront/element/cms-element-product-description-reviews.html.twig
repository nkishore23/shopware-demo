{% sw_extends '@Storefront/storefront/element/cms-element-product-description-reviews.html.twig' %}

{% block element_product_description_reviews_tabs_navigation_description %}
    {{ parent() }}
    <li class="nav-item">
        <a class="nav-link product-detail-tab-navigation-link additional-tab"
            id="additional-tab"
            data-bs-toggle="tab"
            data-off-canvas-tabs="true"
            href="#additional-tab-pane"
            role="tab"
            aria-controls="{{ additionalTabContent }}"
            aria-selected="false">
            Additional
        </a>
    </li>
{% endblock %}


{% block element_product_description_reviews_tabs_content_description %}
    {{ parent() }}
    <div class="tab-pane fade show"
            id="additional-tab-pane"
            role="tabpanel"
            aria-labelledby="additional-tab">

            {% sw_include '@Storefront/storefront/component/product/additional-data.html.twig' %}
    </div>
{% endblock %}